<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test_gui.MudController" prefHeight="400.0" prefWidth="600.0">
    <center>
        <TextArea fx:id="output" editable="false" prefHeight="360.0" prefWidth="600.0" />
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" prefHeight="40.0" prefWidth="600.0">
            <TextField fx:id="input" promptText="Enter command..." prefHeight="30.0" prefWidth="500.0" />
            <Button text="Send" onAction="#handleSendButton" />
        </HBox>
    </bottom>
</BorderPane>